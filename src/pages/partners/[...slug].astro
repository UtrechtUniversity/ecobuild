---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from "astro:content";
import { Globe, ArrowLeft } from "lucide-react";

export async function getStaticPaths() {
    const partners = await getCollection("partners");
    return partners.map((partner) => ({
        params: { slug: partner.id.replace(/\.[^/.]+$/, "") },
        props: { partner },
    }));
}

const { partner } = Astro.props;
const { Content } = await render(partner);
const { name, description, logo, website, type } = partner.data;

const typeColors = {
    company: "text-blue-700 bg-blue-50 border-blue-100",
    government: "text-purple-700 bg-purple-50 border-purple-100",
    academic: "text-emerald-700 bg-emerald-50 border-emerald-100",
    nonprofit: "text-amber-700 bg-amber-50 border-amber-100",
};
---

<Layout title={name}>
    <div class="max-w-4xl mx-auto px-4 py-12 sm:py-20">
        <a
            href={`${import.meta.env.BASE_URL}/`}
            class="inline-flex items-center text-sm text-gray-500 hover:text-blue-600 mb-8 transition-colors"
        >
            <ArrowLeft className="w-4 h-4 mr-1" /> Back to Home
        </a>

        <div
            class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm mb-12"
        >
            <div class="flex flex-col md:flex-row gap-8 items-start">
                <div
                    class="w-32 h-32 md:w-48 md:h-48 rounded-2xl overflow-hidden bg-white border border-gray-100 shrink-0 mx-auto md:mx-0 flex items-center justify-center p-4"
                >
                    <img
                        src={logo.src}
                        alt={name}
                        class="w-full h-full object-contain"
                    />
                </div>

                <div class="flex-grow text-center md:text-left">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">
                        {name}
                    </h1>

                    <div class="mb-4">
                        <span
                            class={`inline-block px-3 py-1 text-sm font-medium border rounded-full ${typeColors[type] || "text-gray-700 bg-gray-50"}`}
                        >
                            {type.charAt(0).toUpperCase() + type.slice(1)}
                        </span>
                    </div>

                    <p class="text-lg text-gray-600 mb-6">{description}</p>

                    <div
                        class="flex flex-wrap justify-center md:justify-start gap-3"
                    >
                        {
                            website && (
                                <a
                                    href={website}
                                    target="_blank"
                                    class="flex items-center gap-2 px-4 py-2 rounded-full bg-blue-50 text-blue-700 hover:bg-blue-100 transition-colors text-sm font-medium"
                                >
                                    <Globe className="w-4 h-4" />
                                    <span>Visit Website</span>
                                </a>
                            )
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="prose prose-lg prose-blue max-w-none text-gray-700">
            <Content />
        </div>
    </div>
</Layout>
